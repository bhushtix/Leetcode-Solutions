class Solution {
    int maxDepth=0;
    int sum=0;
    public int deepestLeavesSum(TreeNode root) {
        helper(root,0);
        return sum;
    }

    private void helper(TreeNode root, int depth) {
        if(root==null) return;

        if(root.left==null && root.right==null) {
            if(depth>maxDepth) {
                maxDepth=depth;
                sum=0;
            }

            if(depth>=maxDepth) {
                sum+=root.val;
            }
        }

        helper(root.right, depth+1);
        helper(root.left, depth+1);
    }
}
